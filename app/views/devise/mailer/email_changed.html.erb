<div class="container-fluid offset-4 col-4 mt-5">
    <p class="text-center h4">Hello <%= @email %>!</p>

    <% if @resource.try(:unconfirmed_email?) %>
        <p class="text-center h4">We're contacting you to notify you that your email is being changed to <%= @resource.unconfirmed_email %>
            .</p>
    <% else %>
        <p class="text-center h4">We're contacting you to notify you that your email has been changed to <%= @resource.email %>.</p>
    <% end %>
</div>