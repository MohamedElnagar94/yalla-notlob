<div class="container-fluid offset-4 col-4 mt-5">
    <h2 class="text-center text-primary">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name) , class:"form-group") do |f| %>
        <div class="field form-group">
            <%= f.label :email , class:"control-label h4"%><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control" %>
        </div>

        <div class="field form-group">
            <%= f.label :password ,class:"control-label h4" %><br />
            <%= f.password_field :password, autocomplete: "current-password" , class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
            <div class="field form-check-inline">
                <%= f.check_box :remember_me ,class: "form-check-input"%>
                <%= f.label :remember_me , class: "form-check-label"%>
            </div>
        <% end %>

        <div class="actions">
            <%= f.submit "Log in" ,class: "btn btn-primary"%>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>