<div class="container-fluid mt-3">
    <%- if controller_name != 'sessions' %>
        <%= link_to "Log in ?", new_session_path(resource_name),class: "h6" %><br/>
    <% end %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Sign up", new_registration_path(resource_name),class: "offset-5 h6" %><br/>
    <% end %>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password ?", new_password_path(resource_name),class: "offset-4 h6" %><br/>
    <% end %>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <div class="form-group text-center">
        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br/>
        </div>
    <% end %>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
        <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br/>
    <% end %>

    <%- if devise_mapping.omniauthable? %>
        <div class="form-group text-center mt-2">

            <!-- Social Media links-->
            <%= link_to user_facebook_omniauth_authorize_path, class: "btn btn-social btn-facebook text-primary" do %>
                <span class="fa fa-facebook-square" style="font-size:48px"></span>
            <% end %>

            <%= link_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-social btn-google" do %>
                <span class="fa fa-google" style="font-size:48px;color:red"></span>
            <% end %>
        </div>
    <% end %>
</div>