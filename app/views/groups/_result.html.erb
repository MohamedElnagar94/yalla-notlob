<% @groups.each { |group| %>
    <tr class="">
        <td class="col-md-8"><a href="" class="groupName"><%= group.group_name %></a></td>
        <td class="col-md-2"><a class="addFriends" data-remote="true" rel="nofollow" data-method="get" href="<%= group_friends_path %>/<%= group.id %>"><%= fa_icon "user-plus",class: "text-success" %></a></td>
        <td class="col-md-2"><a data-confirm="Are you sure?" class="deleteGroup" data-remote="true" rel="nofollow" data-method="delete" href="groups/<%= group.id %>"><%= fa_icon "trash",class: "text-danger" %></a></td>
    </tr>
<% } %>