
<%= content_for :page_title,"Groups" %>
<%= render 'navbar/navbar' %>
<div class="container-fluid">
    <div class="container">
        <div class="row">
            <h1 class="mt-3">Groups</h1>
        </div>

        <%= form_tag groups_path,remote: true,method: :post,id: "add_group_form" do %>
        <div class="row">
            <div class="form-inline w-100">
                <div class="form-group col-md-9 mb-2">
                    <%= label_tag(:group_group_name, :Group, {class:"col-md-4 font-weight-bold"}) %>
                    <%= text_field :group,:user_id,{class:"form-control col-md-8 w-100 inputGroup d-none", placeholder: "ID Of User",autofocus: true,value: current_user.id} %>
                    <%= text_field :group,:group_name,{class:"form-control col-md-8 w-100 inputGroup", placeholder: "Name Of Group",autofocus: true} %>
                </div>
                <%=button_tag(type: :submit,class: "btn btn-primary col-md-3 mb-2 buttonAddGroup") do %>
                    Add Group
                <% end %>
            </div>
        </div>
        <% end  %>
        <div class="row mt-4">
            <div class="col-sm-4">
                <div class="card border-success">
                    <div class="card-body">
                        <div class="card-header">My Groups</div>
                        <div class="mt-4" style="overflow-y: auto;max-height: 240px">
                            <table class="AllGroups">
                                <tr class="noGroups d-none">
                                    <td>There is no groups</td>
                                </tr>
                                <%= render "groups/result" %>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-8 listOfGroupFriends">
                <%= render "group_friends/listGroup" %>
            </div>
        </div>
    </div>
</div>