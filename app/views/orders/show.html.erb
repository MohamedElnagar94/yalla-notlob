<%= content_for :page_title,"Orders" %>
<%= render 'navbar/navbar' %>

<div class="container-fluid mt-5">

  <div class="row">
    <div class="col-md-7">
      <h2 class="mt-5 ml-5">Orders Details</h2>
      <table class="table mt-3 ml-5">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Person</th>
            <th scope="col">Item</th>
            <th scope="col">Amount</th>
            <th scope="col">Price</th>
            <th scope="col">Comment</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">1</th>
            <td>Breakfast</td>
            <td>Mac</td>
            <td>10</td>
            <td>waiting...</td>
            <td>
                Some String here 
            </td>
            <td>
              <input type="button" class="btn btn-outline-danger" value="Remove" />
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-md-4 mt-5 ml-5">
      <div class="mt-5 ml-5">
        <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#usersModal">
          Invited <span class="badge badge-light">12</span>
          <span class="sr-only">unread messages</span>
        </button>
    
        <button type="button" class="btn btn-info ml-2" data-toggle="modal" data-target="#usersModal">
          Accepted <span class="badge badge-light">9</span>
          <span class="sr-only">unread messages</span>
        </button>
        <%= render "orders/modal" %>
      </div>

      <form class="mt-3 ml-5">
        <div class="form-group">
          <input type="text" class="form-control" id="item" placeholder="add item that you need to order" />
        </div>
        <div class="form-group">
          <input type="number" min="0" class="form-control" id="amount" placeholder="amount of item you ordered" />
        </div>
        <div class="form-group">
          <input type="number" min="0" class="form-control" id="price" placeholder="for each item you ordered, add its price from menu" />
        </div>
        <div class="form-group">
          <input type="text" class="form-control" id="comment" placeholder="any comment?!" />
        </div>

        <div class="form-group">
          <input type="button" class="btn btn-outline-info" value="Add To Order" />
        </div>
      </form>
    </div>
  </div>
</div>